<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/FotoProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/beterraba"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beringela"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/FotoProduto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/descricaoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beringela nutritiva, Ã³tima para saladas e sucos."
        android:textSize="16sp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 8,00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descricaoProduto"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        />

    <!-- Novo TextView para exibir a quantidade do produto -->
    <TextView
        android:id="@+id/quantidadeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade: 1"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/precoProduto"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        />

</androidx.constraintlayout.widget.ConstraintLayout>