<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Cor de fundo do card -->
            <corners android:radius="4dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fundo transparente para a borda -->
            <stroke
                android:width="1dp"
                android:color="@android:color/black" /> <!-- Cor da borda -->
            <corners android:radius="4dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
</layer-list>
