<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="16dp">

    <!-- Imagem do Produto -->

    <!-- Nome do Produto -->

    <!-- Descrição do Produto -->

    <ImageView
        android:id="@+id/FotoProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/beterraba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beringela"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descricaoProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beringela nutritiva, ótima para saladas e sucos."
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto" />

    <!-- Preço do Produto -->

    <!-- Texto "Por Kilo" ao lado do Preço -->

    <!-- Quantidade do Produto -->

    <TextView
        android:id="@+id/precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="R$ 8,00"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        app:layout_constraintTop_toBottomOf="@id/descricaoProduto" />

    <TextView
        android:id="@+id/porkilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Por kilo"
        android:textColor="#736801"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/precoProduto"
        app:layout_constraintTop_toTopOf="@id/precoProduto" />

    <TextView
        android:id="@+id/quantidadeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Quantidade: 1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/FotoProduto"
        app:layout_constraintTop_toBottomOf="@id/precoProduto" />

</androidx.constraintlayout.widget.ConstraintLayout>